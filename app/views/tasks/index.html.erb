<h1>List of all Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
   <li>
    <%= task.completed %> - <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>

  <% end %>
</ul>
<a href="/tasks/new">Add a new task</a>

